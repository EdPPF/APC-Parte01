# instalando plotly
pip install plotly

# importando as bibliotecas necessárias
import plotly.graph_objects as go
import pandas as pd

# Listas vazias 
Ano  = []
Agricultura  = []
Energia  = []
Solo  = []
Pi  = []


#importando os dados para a leitura

dados_a = pd.read_csv('https://raw.githubusercontent.com/EdPPF/APC-Parte01/main/co2_variacao_setores.csv')

dados = dados_a.values

#'localizção e ordem'
for i in dados:
  Ano.append(i[0])
  Agricultura.append(i[1])
  Solo.append(i[2])
  Energia.append(i[3])
  Pi.append(i[4])

#colocando as informações de como as variaveis devem 'ficar' no gráico
line1 = go.Scatter(x=Ano, y= Agricultura, mode = 'lines', name = 'Agricultura')
line2 = go.Scatter(x = Ano, y = Solo, mode = 'lines', name = 'Solo e Silvicultura ')
line3 = go.Scatter(x = Ano, y = Energia,mode = 'lines', name = ' Energia')
line4 = go.Scatter(x = Ano, y = Pi, mode = 'lines', name = 'Processos Industriais')

data = [line1,line2,line3,line4]

 # arrumando o layout do gráfico

fig=go.Layout(
    hovermode="x",
    title='Emissão de CO2 - Brasil', 
    xaxis_title='Anos', 
    yaxis_title=' Variação (%)',
     plot_bgcolor = 'black',
     font = {'family': 'Calibri','size': 22,'color': 'green'} 
     )
fig = go.Figure(data=data, layout=layout)

fig.show()
